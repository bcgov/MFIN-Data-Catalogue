{
    "name": "bcgov-c/mfin-data-catalogue",
    "description": "BC MFIN Data Catalogue",
    "type": "project",
    "license": "proprietary",
    "homepage": "https://github.com/bcgov-c/MFIN-Data-Catalogue",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "vcs",
            "url": "https://github.com/bcgov/bcbb"
        },
        {
            "type": "vcs",
            "url": "https://github.com/bcgov/bcbb-theme"
        },
        {
            "type": "package",
            "package": {
                "name": "drupaloverride/tac_lite",
                "version": "1.6",
                "type": "drupal-module",
                "dist": {
                    "url": "https://ftp.drupal.org/files/projects/tac_lite-8.x-1.6.tar.gz",
                    "type": "tar"
                }
            }
        }
    ],
    "require": {
        "bcgov/bcbb": "1.0.x-dev",
        "bcgov/bcbb_theme": "1.0.x-dev",
        "composer/installers": "^2.0",
        "drupal/core-composer-scaffold": "^10.1",
        "drupal/core-recommended": "^10.1",
        "drupal/registration_role": "dev-1.x#a3a3d15",
        "drupaloverride/tac_lite": "^1.6",
        "weitzman/drupal-test-traits": "^2.1",
        "vlucas/phpdotenv": "^5.1",
        "webflo/drupal-finder": "^1.2"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "drupal/core-composer-scaffold": true,
            "phpstan/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "cweagans/composer-patches": true
        },
        "sort-packages": true
    },
    "autoload": {
        "classmap": [
            "scripts/ScriptHandler.php"
        ],
        "files": ["load.environment.php"]
    },
    "scripts": {
        "pre-install-cmd": [
            "BCGovC\\MfinDataCatalogue\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "BCGovC\\MfinDataCatalogue\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "BCGovC\\MfinDataCatalogue\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "BCGovC\\MfinDataCatalogue\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "html/"
            }
        },
        "installer-paths": {
            "html/core": [
                "type:drupal-core"
            ],
            "html/libraries/{$name}": [
                "type:drupal-library"
            ],
            "html/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "html/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "html/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "html/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "html/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "html/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        },
        "composer-exit-on-patch-failure": true,
        "patches": {
            "drupaloverride/tac_lite": {
                "3295203 - Check for scheme name before using": "https://www.drupal.org/files/issues/2023-05-10/tac_lite-undefined_scheme_name-3295203-6.patch",
                "3325055 - Drupal 10 compatibility": "https://www.drupal.org/files/issues/2022-12-02/3325055-drupal-10-compatibility-02.patch",
                "3359802 - Add schema for tac_lite.settings": "https://www.drupal.org/files/issues/2023-05-11/tac_lite-schema-3359802-2.patch"
            }
        }
    },
    "require-dev": {
        "drupal/core-dev": "^10.1"
    }
}
